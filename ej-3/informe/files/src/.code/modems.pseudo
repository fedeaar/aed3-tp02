proc modems(O: sec$<\mathbb{Z} \times \mathbb{Z}>$, N, W, R, U, V: $\mathbb{N}_0$) -> $\mathbb{R} \times \mathbb{R}$:
    a, b <- 0, 0
    E <- {(w(O[i], O[j]), O[i], O[j]) | i, j: 1 .. N}
    X <- $\emptyset$
    para i en 1 .. N - W:
        u, v <- minima arista segura en E para B = (O, X)
        X <- X $\cup$ {(u, v)}
        si (u, v) es de tipo UDP:
            a <- a + w(u, v)
        si no:
            b <- b + w(u, v) 
    retornar a, b 